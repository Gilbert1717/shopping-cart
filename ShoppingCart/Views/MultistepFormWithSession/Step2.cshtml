@model MultiStepFormViewModel

<h1>Multistep Form (With Session) - Step 2</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Step2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-4 col-form-label control-label"></label>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control-plaintext" readonly />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next Step" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*NOTE: Purposely disabled client-side validation to easier demonstrate server-side validation.*@

@model ShoppingCart.ViewModels.ProductViewModel

<h1 class="display-4">Ordered Products</h1>

<div>
    <form asp-controller="Home" asp-action="OrderedProduct" method="get">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-3 form-group">
                <select asp-for="productName" asp-items="Model.productNameList" class="form-control">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-md-1 form-group">
                <input type="submit" value="Filter" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th>@Html.DisplayNameFor(model => model.OrderedProducts[0].Product.ProductID)</th>
        <th>@Html.DisplayNameFor(model => model.OrderedProducts[0].Product.Name)</th>
        <th>@Html.DisplayNameFor(model => model.OrderedProducts[0].Product.Price)</th>
        <th>@Html.DisplayNameFor(model => model.OrderedProducts[0].Quantity)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderedProducts)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Product.ProductID)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>
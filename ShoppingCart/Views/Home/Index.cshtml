@model IEnumerable<Product>

<div>
    <h1 class="display-4">All Products</h1>

    <p>
        <a asp-action="Create">Add New Product</a>
    </p>

    @if (Model.Any())
    {
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(x => Model.First().ProductID)</th>
                <th>@Html.DisplayNameFor(x => Model.First().Name)</th>
                <th>@Html.DisplayNameFor(x => Model.First().Price)</th>

            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => product.ProductID)</td>
                    <td>@Html.DisplayFor(x => product.Name)</td>
                    <td>@Html.DisplayFor(x => product.Price)</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-info">no products at the moment.</p>
    }
</div>